<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        android:key="kill"
        android:summary="@string/restart_zim_pref_summary"
        android:title="@string/restart_zim_pref_title"
        app:iconSpaceReserved="false" />

    <org.zimmob.zimlx.preferences.StyledSwitchPreference
        android:defaultValue="false"
        android:key="pref_showDebugInfo"
        android:persistent="true"
        android:title="@string/show_debug_info_pref_title"
        app:iconSpaceReserved="false" />

    <org.zimmob.zimlx.preferences.StyledSwitchPreference
        android:defaultValue="false"
        android:key="pref_key__auto_delete_desktop"
        android:persistent="true"
        android:title="@string/auto_delete_desktop"
        app:iconSpaceReserved="false" />

    <ListPreference
        android:defaultValue="0"
        android:disableDependentsState="false"
        android:entries="@array/entries__layout_mode"
        android:entryValues="@array/values__zero_to_two"
        android:key="pref_key__layout_mode"
        android:persistent="true"
        android:summary="%s"
        android:title="@string/title__layout_mode"
        app:iconSpaceReserved="false" />

</androidx.preference.PreferenceScreen>